{
  "preset": "nestjs",
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^prisma/(.*)$": "<rootDir>/src/prisma/$1",
    "^modules/(.*)$": "<rootDir>/src/modules/$1"
  }
}
